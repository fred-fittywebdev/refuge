{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	{% for flashError in app.flashes('verify_email_error') %}
		<div class="text-red-600" role="alert">{{ flashError }}</div>
	{% endfor %}
	<div class="flex flex-col items-center my-36">
		<h1 class="text-5xl text-gray-700 font-medium mb-14">Inscription</h1>


		<section class="max-w-4xl p-6 mx-auto bg-white rounded-md shadow-md dark:bg-gray-800">
			<h2 class="text-lg font-semibold text-gray-700 capitalize dark:text-white">Param√®tres du compte</h2>

			{{ form_start(registrationForm) }}
			<div class="grid grid-cols-1 gap-6 mt-4 sm:grid-cols-2">


				<div>
					{{ form_row(registrationForm.email, {'attr': {'class':"block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-300 rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-500 dark:focus:border-blue-500 focus:outline-none focus:ring"}}) }}

				</div>

				<div>
					{{ form_row(registrationForm.plainPassword, {'attr': {'class':"block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-300 rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-500 dark:focus:border-blue-500 focus:outline-none focus:ring"}}, {
																																																																																						            label: 'Password', 
																																																																																						        }) }}
				</div>
				<div>
					{{ form_row(registrationForm.agreeTerms) }}
				</div>

			</div>
			<div class="flex justify-end mt-6">
				<button type="submit" class="px-6 py-2 leading-5 text-white transition-colors duration-200 transform bg-gray-700 rounded-md hover:bg-gray-600 focus:outline-none focus:bg-gray-600">S'inscrire</button>
			</div>
			{{ form_end(registrationForm) }}
		</section>
	{% endblock %}
