{% extends 'base.html.twig' %}

{% block title %}Acceuil
{% endblock %}

{% block body %}
	{% set refuge = globalRefuge.findBy({}, {'id' : 'DESC'}, 1) %}

	{% for r in refuge %}
		<header class="bg-white dark:bg-gray-800">
			<nav class="bg-white dark:bg-gray-800">
				<div class="container p-6 mx-auto">
					{% for message in app.flashes('success') %}
						<div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded" role="alert">{{ message }}</div>
					{% endfor %}
					<h1 class="block text-2xl font-bold text-center text-gray-800 dark:text-white lg:text-4xl hover:text-gray-700 dark:hover:text-gray-300">{{ r.name }}</h1>

					<div class="flex items-center justify-center mb-12 mt-6 text-gray-600 capitalize dark:text-gray-300">
						<a href="#" class="text-gray-800 dark:text-gray-200 border-b-2 border-gray-500 mx-1.5 sm:mx-6">Acceuil</a>

						<a href="#" class="border-b-2 border-transparent hover:text-gray-800 dark:hover:text-gray-200 hover:border-gray-500 mx-1.5 sm:mx-6">Equipe</a>

						<a href="#" class="border-b-2 border-transparent hover:text-gray-800 dark:hover:text-gray-200 hover:border-gray-500 mx-1.5 sm:mx-6">Anmimaux</a>

						<a href="#" class="border-b-2 border-transparent hover:text-gray-800 dark:hover:text-gray-200 hover:border-gray-500 mx-1.5 sm:mx-6">Contact</a>

						{% if app.user %}
							<a href=" {{ path('messages') }} " class="border-b-2 border-transparent hover:text-gray-800 dark:hover:text-gray-200 hover:border-gray-500 mx-1.5 sm:mx-6">
								<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewbox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"/>
								</svg>
							</a>
							<a href=" {{ path('app_logout') }} " class="border-b-2 border-transparent hover:text-gray-800 dark:hover:text-gray-200 hover:border-gray-500 mx-1.5 sm:mx-6">
								<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewbox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
								</svg>
							</a>
						{% else %}
							<a href=" {{ path('app_login') }} " class="border-b-2 border-transparent hover:text-gray-800 dark:hover:text-gray-200 hover:border-gray-500 mx-1.5 sm:mx-6">
								<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewbox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"/>
								</svg>
							</a>
						{% endif %}


					</div>
				</div>
			</nav>

			<div class="container flex flex-col px-6 py-4 mx-auto space-y-6 lg:h-128 lg:py-16 lg:flex-row lg:items-center lg:space-x-6">
				<div class="flex flex-col items-center w-full lg:flex-row lg:w-1/2">


					<div class="max-w-lg lg:mx-12 lg:order-2">
						<h2 class="text-2xl font-medium tracking-wide text-gray-800 dark:text-white lg:text-4xl">Leur havre de paix</h2>
						<p class="mt-4 text-gray-600 dark:text-gray-300">Lorem ipsum, dolor sit amet consectetur adipisicing elit. Aut quia asperiores alias vero magnam recusandae adipisci ad vitae laudantium quod rem voluptatem eos accusantium cumque.</p>
						<div class="mt-6">
							<a href="#" class="px-6 py-2 leading-5 text-white transition-colors duration-200 transform bg-gray-700 rounded-md hover:bg-gray-600 focus:outline-none focus:bg-gray-600">Voir le refuge</a>
						</div>
					</div>
				</div>

				<div class="flex items-center justify-center w-full h-96 lg:w-1/2">
					<img class="object-cover w-full h-full max-w-2xl rounded-md" src="https://images.unsplash.com/photo-1450778869180-41d0601e046e?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1150&q=80" alt="apple watch photo">
				</div>
			</div>
		</header>
	{% endfor %}


{% endblock %}
